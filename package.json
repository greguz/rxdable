{
  "name": "rxdable",
  "version": "0.5.0",
  "description": "Utility lib to work with Node.js streams and Rx.js",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "tslint -c tslint.json src/**/*.ts",
    "test:unit": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive **/*.spec.ts",
    "test": "npm run test:ts && npm run test:lint && npm run test:coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "types": "rimraf types && tsc --emitDeclarationOnly --declaration --declarationDir types",
    "build": "rimraf dist && tsc",
    "prepublishOnly": "npm run test && npm run types && npm run build"
  },
  "keywords": [
    "rx",
    "rxjs",
    "observable",
    "node",
    "stream",
    "readable",
    "writable",
    "duplex",
    "transform"
  ],
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.38",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/rxdable.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}

{
  "name": "rxdable",
  "version": "2.2.0",
  "description": "Utility lib to work with Node.js streams and Rx.js",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint src/**/*.ts",
    "test:unit": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive **/*.spec.ts",
    "test": "npm run test:ts && npm run test:lint && npm run test:coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "types": "rimraf types && tsc --emitDeclarationOnly --declaration --declarationDir types",
    "build": "rimraf dist && tsc",
    "prepublishOnly": "npm run test && npm run types && npm run build"
  },
  "keywords": [
    "rx",
    "rxjs",
    "observable",
    "node",
    "stream",
    "readable",
    "writable",
    "duplex",
    "transform"
  ],
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/rxdable.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}

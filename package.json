{
  "name": "rxdable",
  "version": "2.2.0",
  "description": "Utility lib to work with Node.js streams and Rx.js",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "tslint -c tslint.json src/**/*.ts",
    "test:unit": "mocha -r ts-node/register src/**/*.spec.ts",
    "test:coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive **/*.spec.ts",
    "test": "npm run test:ts && npm run test:lint && npm run test:coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "types": "rimraf types && tsc --emitDeclarationOnly --declaration --declarationDir types",
    "build": "rimraf dist && tsc",
    "prepublishOnly": "npm run test && npm run types && npm run build"
  },
  "keywords": [
    "rx",
    "rxjs",
    "observable",
    "node",
    "stream",
    "readable",
    "writable",
    "duplex",
    "transform"
  ],
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "husky": "^3.1.0",
    "lodash": "^4.17.15",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "rxjs": "^6.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/rxdable.git"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
